{
  "name": "@ot/plaintext-editor",
  "version": "0.0.0",
  "description": "A Editor Client to wrap a Plain Text Editor to have collaborative experience based on OT.",
  "author": "Progyan Bhattacharya <bprogyan@gmail.com>",
  "homepage": "https://github.com/Progyan1997/ot#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "index.d.ts",
  "rootDir": "plaintext-editor",
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Progyan1997/ot.git"
  },
  "bugs": {
    "url": "https://github.com/Progyan1997/ot/issues"
  },
  "scripts": {
