    "test": "TEST_ENV=true jest --colors",
    "test:watch": "yarn test --watch"
  },
  "devDependencies": {
    "@ot/plaintext": "^0.0.0",
    "@ot/utils": "^0.0.0",
    "@ot/types": "^0.0.0"
  },
  "dependencies": {
    "@ot/state-machine": "^0.0.0",
    "mitt": "3.0.0"
  },
  "peerDependencies": {
    "@ot/plaintext": "^0.0.0"
