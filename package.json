{
  "name": "operational-transformation",
  "private": true,
  "description": "A collection of Algorithms to Synchronise changes across multiple clients using Operational Transformation",
  "scripts": {
    "postinstall": "husky install",
    "build": "lerna exec yarn build",
    "precoverage": "./scripts/merge-coverage-reports.sh",
    "coverage": "nyc merge coverage-all coverage/coverage.json && nyc report -t coverage --report-dir coverage --reporter=lcov",
    "pretest:ci": "rm -rf coverage-* coverage",
    "test": "TEST_ENV=true jest --colors",
    "test:ci": "concurrently --prefix \"{time}-[{index}]\" \"yarn test:unit\" \"yarn test:firebase-adapter\"",
    "test:unit": "yarn test --ci --silent",
    "test:firebase-adapter": "cd packages/firebase-adapter && yarn test:ci",
    "test:watch": "yarn test --watch",
    "lint": "yarn lint:lockfile && yarn lint:prettier",
    "lint:prettier": "prettier --write packages/**/*.ts",
    "lint:lockfile": "check-yarn-lock",
    "release": "lerna version --no-private --exact"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Progyan1997/Operational-Transformation.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@microsoft/api-extractor": "7.18.7",
    "@types/jest": "27.0.1",
    "@types/node": "16.7.10",
    "check-yarn-lock": "0.2.1",
    "concurrently": "6.2.1",
    "firebase-tools": "9.17.0",
    "husky": "7.0.2",
    "jest": "27.1.0",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "nyc": "15.1.0",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.5",
    "typescript": "4.4.2",
    "webpack": "5.52.0",
    "webpack-cli": "4.8.0"
  }
}
